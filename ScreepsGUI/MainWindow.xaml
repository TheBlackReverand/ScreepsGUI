<Window x:Class="ScreepsGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="800">
    <Grid>
        <WrapPanel>
            <Border BorderThickness="1" BorderBrush="Black" Margin="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" MinWidth="200" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Margin="5" Text="email" />
                    <TextBox Name="txtLogin" Grid.Row="0" Grid.Column="1" Margin="5"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Margin="5" Text="password" />
                    <PasswordBox  Name="pwdPassword" Grid.Row="1" Grid.Column="1" Margin="5"/>

                    <Button Name="btnConnect" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" Content="Connect" Click="btnConnect_Click" />
                    <Button Name="btnDeconnect" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" Content="Deconnect" Click="btnDeconnect_Click" />
                </Grid>
            </Border>

            <Border BorderThickness="1" BorderBrush="Black" Margin="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" MinWidth="200" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Margin="5" Text="Token" />
                    <TextBlock Name="txbToken" Grid.Row="0" Grid.Column="1" Margin="5"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Margin="5" Text="Login" />
                    <TextBlock Name="txbLogin" Grid.Row="1" Grid.Column="1" Margin="5"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Margin="5" Text="Username" />
                    <TextBlock Name="txbUsername" Grid.Row="2" Grid.Column="1" Margin="5"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Margin="5" Text="EMail" />
                    <TextBlock Name="txbEmail" Grid.Row="3" Grid.Column="1" Margin="5"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Margin="5" Text="Steam display name" />
                    <TextBlock Name="txbSteamDisplayName" Grid.Row="4" Grid.Column="1" Margin="5"/>
                </Grid>
            </Border>
        </WrapPanel>
    </Grid>
</Window>